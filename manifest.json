{
  "name": "Kanban Rules for Waffle.io",
  "version": "0.5.0",
  "manifest_version": 2,
  "description": "Used to add kanban rules missing from vanila Waffle.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "http://localhost/*",
        "https://localhost/*",
        "https://waffle.io/*"  
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*",
        "http://localhost/*",
        "https://localhost/*",
        "https://waffle.io/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}